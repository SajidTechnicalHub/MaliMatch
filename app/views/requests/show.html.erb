

<div class="content">
  <div class="page-title">
        Request Received
        <div class="right">
            <% if @current_user_profile.request <= 0 %>
            <span class="px-4 py-2 bg-danger remainning-btn">
              (<%= @current_user_profile.request%>) Request Remaining
            </span>
          <% else %>
            <span class="px-4 py-2 bg-info remainning-btn">
            (<%= @current_user_profile.request%>) Request Remaining
           </span>

          <% end %>
        </div>
    </div>
  <div class="container-fluid">
    <div class="row header"></div>
  </div>
  <div class="container">
    
    <div class="row mt-2">
      <div class="col-md-2 mt-4 profile-show-F" >
        <span class="p-4 bg-info text-white font-weight-bolder" style=" border-radius:10px;">F<%= @profile.id %></span>
      </div>
      <div class="col-md-10">
        <div class="row">
        	<h5><%= @profile.age %> years old â€¢ <%= @profile.region %>, <%= @profile.country %></h5>
        </div>
        <div class="row">
        	<div class="col-md-3">

            <%= link_to 'Accept Request', requests_path(accept: @profile.id) , class:"received-request"%>
          
        	</div>

        	<div class="col-md-3">
        		
        		<%= link_to 'Reject Request', requests_path(reject: @profile.id), data: {:confirm => 'Are you sure?'}, class:"delete-request"%>
        	</div>

          <div class="col-md-3">
            <%= link_to 'Delete Request', dashboard_path(profile_id: @profile.id), class:"delete-request", method: :delete, :data => {:confirm => 'Are you sure! You want to delete this request.'} %>
          </div>
      
        </div>
      </div>
    </div>
        <% if @profile.requeststatus == 'accepted' %>
          <div class=" block mt-4 p-5">
            
            <div class="row">
              <div class="col-lg-4">
                <p><strong>Name</strong></p>
              </div>
              <div class="col-lg-4">
                <p><%= @profile.user.name %></p>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-4">
                <p><strong>Phone</strong></p>
              </div>
              <div class="col-lg-4">
                <p><%= @profile.user.phone %></p>
              </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                  <p><strong>Email</strong></p>
                </div>
                <div class="col-lg-4">
                  <p><%= @profile.user.email %></p>
                </div>
              
            </div>
          </div>
        <% end%>

        
    <div class="row mt-5">
    	<div class="col-lg-6">
    		<h4>My self summary</h4>
    		<p><%= @profile.summary %></p>

    		<h4>My work / education</h4>
    		<p><%= @profile.education %></p>

    		<h4>My Islam</h4>
    		<h5>Group / Sect / Methodology</h5>

    		<p><%= @profile.sect %></p>

    		<h4>Scholars taken from / Speakers listened to?</h4>
    		<p><%= @profile.scholar %></p>

    		<h4>How do I dress?</h4>
    		<p><%= @profile.dressing%></p>

    		<h4>My Islam (with detail)</h4>
    		<p>I would say I have always been practising since a young age, I pray 5 times alhamdulillah and I find watching Islamic videos really comforting for me.</p>

        <h4>Prayers</h4>
        <p><%= @profile.pattern%></p>

    		<h4>More about me</h4>
    		<p>My hobbies, family, lifestyle, interests and skills</p>
    		<p><%= @profile.hobby%></p>
    	</div>
    	<div class="col-lg-6">
    		<h4>Details</h4>
    		<div class="bg-secondary " style="border-radius: 10px;">
    			<table class="table table-hover">
    				<tbody>
    					<tr>
    						<td>Marital status</td>
    						<td><%= @profile.status%></td>
    					</tr>
              <tr>
                <td>Children</td>
                <!-- <td><%#= @profile.children%></td> -->
                <% if @profile.children == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
              <tr>
                <td>Ethnicity</td>
                <td><%= @profile.ethnicity%></td>
              </tr>
              <tr>
                <td>Nationality</td>
                <td><%= @profile.nationality%></td>
              </tr>
              <tr>
                <td>Height</td>
                <td><%= @profile.height%></td>
              </tr>
              <tr>
                <td>Weight</td>
                <td><%= @profile.weight%></td>
              </tr>
              <tr>
                <td>Build</td>
                <td><%= @profile.build%></td>
              </tr>
              <tr>
                <td>Appearance</td>
                <td><%= @profile.facial%></td>
              </tr>
              <tr>
                <td>Revert</td>
                <!-- <td><%#= @profile.revert%></td> -->
                <% if @profile.revert == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
               <tr>
                <td>Practicing since</td>
                <td><%= @profile.age%></td>
              </tr>
               <!-- <tr>
                <td>Prayers</td>
                <td><%#= @profile.pattern%></td>
              </tr> -->
    				</tbody>
    			</table>
    		</div>
        <h4>Open to matches from</h4>
        <div class="bg-secondary"style="border-radius: 10px;">
          <table class="table table-hover">
            <tbody>
              <tr>
                <td>Reverts</td>
               <!--  <td><%#= @profile.revert%></td> -->
                <% if @profile.revert == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
              <tr>
                <td>Divorcees</td>
                <!-- <td><%#= @profile.devorcees%></td> -->

                <% if @profile.devorcees == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
              <tr>
                <td>Widows</td>
                <!-- <td><%#= @profile.widows%></td> -->
                <% if @profile.widows == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
              <tr>
                <td>Parents</td>
                <% if @profile.parents == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
              
            </tbody>
          </table>
        </div>
    	</div>
    </div>
  </div>
</div>

