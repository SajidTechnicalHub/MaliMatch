

<div class="content">
  <div class="page-title">
       Find Profile
       <div class="right">
           <% if @current_user_profile.request <= 0 %>
                 <span class="px-4 py-2 bg-danger remainning-btn">
                   (<%= @current_user_profile.request%>) Request Remaining
                 </span>
               <% else %>
                 <span class="px-4 py-2 bg-info remainning-btn">
                 (<%= @current_user_profile.request%>) Request Remaining
                </span>

              <% end %>
       </div>
   </div>

   <div class="malimatch-profile-block">
      <div class="malimatch-profile-id">
          <span class="p-4 bg-info text-white font-weight-bolder" style=" border-radius:10px;">F<%= @profile.id %></span>
      </div>
     <div class="malimatch-profile-age-block">
        <div class="malimatch-profile-age">
          <h5><%= @profile.age %> years old â€¢ <%= @profile.region %>, <%= @profile.country %></h5>
       </div>
       <div class="malimatch-profile-request">
        <% if @current_user_profile.request <= 0 || @current_user_profile.set_days > 30 || @current_user_profile.subscription == nil %>
              <%= link_to 'Request', settings_index_path, class:"malimatch-profile-request-btn", :data => {:confirm => 'You have availed all of your Requests? Please visit Subsucription plan for new Requests. Thanks!'} %>
            <% else %>
              
              <%= link_to 'Request', requests_path(receiver_id: @profile.user_id, sender_id: current_user.id, profile_id: @profile.id), method: 'post', class:"malimatch-profile-request-btn" %>
            <% end %>
      </div>
   </div>
    <div class="malimatch-profile-subsucribe">
     <% if @current_user_profile.set_days <= 30 && @current_user_profile.subscription != nil%>
          
              <button class="btn btn-success text-white">( <%=30 - @current_user_profile.set_days%> )  days remaining in your subscription expire!</button>
          
            <% else %>
          
              <button class="btn btn-danger text-white">Your Account is Inactive</button>
          
              
            <% end %>
   </div>
  </div>

  <div class="container">
  
    <div class="row mt-5">
    	<div class="col-lg-6">
    		<h4>My self summary</h4>
    		<p><%= @profile.summary %></p>

    		<h4>My work / education</h4>
    		<p><%= @profile.education %></p>

    		<h4>My Islam</h4>
    		<h5>Group / Sect / Methodology</h5>

    		<p><%= @profile.sect %></p>

    		<h4>Scholars taken from / Speakers listened to?</h4>
    		<p><%= @profile.scholar %></p>

    		<h4>How do I dress?</h4>
    		<p><%= @profile.dressing%></p>

    		<h4>My Islam (with detail)</h4>
    		<p><%= @profile.islamic%></p>

        <!-- <h4>Prayers</h4>
        <p><%#= @profile.pattern%></p>
 -->
    		<h4>More about me</h4>
    		<p>My hobbies, family, lifestyle, interests and skills</p>
    		<p><%= @profile.hobby%></p>
    	</div>
    	<div class="col-lg-6">
    		<h4>Details</h4>
    		<div class="bg-secondary " style="border-radius: 10px;">
    			<table class="table table-hover">
    				<tbody>
    					<tr>
    						<td>Marital status</td>
    						<td><%= @profile.status%></td>
    					</tr>
              <tr>
                <td>Children</td>
                <!-- <td><%#= @profile.children%></td> -->
                <% if @profile.children == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
              <tr>
                <td>Ethnicity</td>
                <td><%= @profile.ethnicity%></td>
              </tr>
              <tr>
                <td>Nationality</td>
                <td><%= @profile.nationality%></td>
              </tr>
              <tr>
                <td>Height</td>
                <td><%= @profile.height%></td>
              </tr>
              <tr>
                <td>Weight</td>
                <td><%= @profile.weight%></td>
              </tr>
              <tr>
                <td>Build</td>
                <td><%= @profile.build%></td>
              </tr>
              <tr>
                <td>Appearance</td>
                <td><%= @profile.facial%></td>
              </tr>
              <tr>
                <td>Revert</td>
                <!-- <td><%#= @profile.revert%></td> -->
                <% if @profile.revert == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
               <tr>
                <td>Practicing since</td>
                <td><%= @profile.age%></td>
              </tr>
               <tr>
                <td>Prayers</td>
                <td><%= @profile.pattern%></td>
              </tr>


    				</tbody>
    			</table>
    		</div>
        <h4>Open to matches from</h4>
        <div class="bg-secondary"style="border-radius: 10px;">
          <table class="table table-hover">
            <tbody>
              <tr>
                <td>Reverts</td>
               <!--  <td><%#= @profile.revert%></td> -->
                <% if @profile.revert == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
              <tr>
                <td>Divorcees</td>
                <!-- <td><%#= @profile.devorcees%></td> -->

                <% if @profile.devorcees == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
              <tr>
                <td>Widows</td>
                <!-- <td><%#= @profile.widows%></td> -->
                <% if @profile.widows == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
              <tr>
                <td>Parents</td>
                <% if @profile.parents == true%>
                    <td>Yes</td>
                <%else%>
                  <td>No</td>
                <%end%>
              </tr>
              
            </tbody>
          </table>
        </div>
    	</div>
    </div>
  </div>
</div>
