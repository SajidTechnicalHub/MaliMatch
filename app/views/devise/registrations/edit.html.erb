<%= render 'home/header' %>
<section class="breadcrumb-area profile-bc-area">
        <div class="container">
            <div class="content">
                <h2 class="title extra-padding">
                    Setting
                </h2>
                <ul class="breadcrumb-list extra-padding">
                    <li>
                       <%= link_to 'Dashboard', dashboard_index_path %>
                    </li>

                    <li>
                        Setting
                    </li>
                </ul>
            </div>
        </div>
 </section>

<section class="user-setting-section">
   <div class="container">
       <div class="row">
           <div class="col-xl-3 col-md-5">
            <%= render 'dashboard/dashboard_sidebar' %>
           </div>
           <div class="col-xl-9 col-md-7 ">
              <div class="page-title">
                    Edit User
                    <div class="right">
                        
                    </div>
                </div>
              <section class="log-reg">
                <div class="container">
                  <div class="row justify-content-end">
                    <div class="col-lg-12">
                      <%= render 'home/alert_message'%>
                      <div class="log-reg-inner">
                        
                        <div class="main-content inloginp">

                          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                            <%= render "devise/shared/error_messages", resource: resource %>

                            <div class="form-group">
                              <%= f.label :name %><br />
                              <%= f.text_field :name, autofocus: true,placeholder:"Enter Full Name", autocomplete: "name", class:'my-form-control' %>
                            </div>
                            
                            <div class="form-group">
                              <%= f.label :phone %><br />
                              <%= f.text_field :phone, autofocus: true,placeholder:"Enter Phone No", autocomplete: "phone", class:'my-form-control' %>
                            </div>
                            <div class="form-group">
                              <%= f.label :email %><br />
                              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'my-form-control' %>
                            </div>

                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                            <% end %>

                            <div class="form-group">
                              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                              <%= f.password_field :password, autocomplete: "new-password", class:'my-form-control' %>
                              <% if @minimum_password_length %>
                                <br />
                                <em><%= @minimum_password_length %> characters minimum</em>
                              <% end %>
                            </div>

                            <div class="form-group">
                              <%= f.label :password_confirmation %><br />
                              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'my-form-control' %>
                            </div>

                            <div class="form-group">
                              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                              <%= f.password_field :current_password, autocomplete: "current-password", class:'my-form-control' %>
                            </div>

                            <div class="button-wrapper">
                              <%= f.submit "Update", class:'custom-button' %>
                            </div>
                          <% end %>

                         
                          
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </section>
            
           </div>
       </div>
    </div>
  </section>
    <%= render 'home/footer' %>

        

      




