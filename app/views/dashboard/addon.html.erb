</div>


  
<div class="content">
  <!-- Header -->
  <div class="container-fluid">
    <div class="row header justify-content-center align-items-center">
      <div class="col-8"></div>
      <div class="col-4">
          <% if @profile.request <= 0 %>
            <span class="px-4 py-2 bg-danger remainning-btn">
              (<%= @profile.request%>) Request Remaining
            </span>
          <% else %>
            <span class="px-4 py-2 bg-info remainning-btn">
            (<%= @profile.request%>) Request Remaining
           </span>

          <% end %>
        </div>
    </div>
  </div>
  <div class="container">
    
    <div class="row justify-content-center align-items-center">
      
        <div class="col-lg-4 ">
            <div class="block-promoted box-shadow-medium  ">
               <center> <h3><span style="color:orange; font: bold;">Promoted Pakage</span></h3>
                <h3>$14.99</h3>
                <%= link_to image_tag("premium.png", class:'block1-img mb-2'), root_path %>
                <p>This package upgrades your profile and makes you show up at the top of searches that include you and on the general Profiles page for 30 days. This increases your chances of having your profile seen and requested!</p></center>
              
                <%= button_to 'Buy Now', addons_premium_path, remote: true, class:'btn signup-btn mt-3' %>
             </div>
      </div>
      
        <div class="col-lg-4 ">
            <div class="block-promoted box-shadow-medium  ">
                <center><h3><span style="color:orange;">1 Additional Request</span></h3>
                <h3>.99c</h3>
                <%= link_to image_tag("premium.png", class:'block1-img mb-2'), root_path %>
                <p class="mb-5"  style = 'margin-top:40px'>1 additional request.</p></center>
                  <br>
                <%= button_to 'Buy Now', addons_path, remote: true, class:'btn signup-btn mt-5 ' %>
             </div>
      </div>

    </div>
  </div>
</div>


            
