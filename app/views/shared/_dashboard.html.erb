.request-block{
	height: 220px;
	overflow: auto;
}
.request-text{
	color:white;
	background: #00BFFF; 
	padding: 5px; 
	padding-left: 20px; 
	border-radius: 10px; 
	margin-left: 10px;
}

</style>

<div class="row col-3 mt-2">
	<h3 class="request-text">My Requests Sent</h3>
	<hr>
</div>


<div class="row justify-content-center request-block">
	 <% @requests.each do |send_request| %>
          
	  <% @profile = Profile.find_by(user_id:send_request.receiver_id ) %>
	  <% if current_user.id == send_request.sender_id  %>
		<div class="col-lg-3 ">
			<div class="card border-secondary mb-3 send-request" style="max-width: 18rem;">
			  <div class="card-header">
			  	<%= link_to 'F',request_path(@profile.id), class:'link-style' %>
			  	<%= link_to @profile.id, request_path(@profile.id), class:'link-style' %>
			  	
			  </div>
			  <div class="card-body text-secondary">
			    
			    <span class="card-text"><%= link_to @profile.summary, request_path(@profile.id), class:'link-style' %></span>
			  </div>
			</div>
		</div>

   		 <% end %>
    <% end %>
	
</div>

<div class="row col-4 mt-5">
	<h3 class="request-text">My Requests Received</h3>
	<hr>
</div>
<div class="row justify-content-center request-block">
	 <% @requests.each do |received_request| %>
          
	  <% @profile = Profile.find_by(user_id:received_request.receiver_id ) %>
	  <% if current_user.id == received_request.receiver_id  %>
		<div class="col-lg-3 ">
			<div class="card border-secondary mb-3 send-request" style="max-width: 18rem;">
			  <div class="card-header">
			  	<%= link_to 'F',request_path(@profile.id), class:'link-style' %>
			  	<%= link_to @profile.id, request_path(@profile.id), class:'link-style' %>
			  	
			  </div>
			  <div class="card-body text-secondary">
			    
			    <span class="card-text"><%= link_to @profile.summary, request_path(@profile.id), class:'link-style' %></span>
			  </div>
			</div>
		</div>

   		 <% end %>
    <% end %>
	
</div>
	
	