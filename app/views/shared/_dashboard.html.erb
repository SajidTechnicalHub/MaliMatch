
	
<div class="card ">
	<div class="card-header">
		<h4>Requests Sent</h4>
	</div>
	<div class="card-body">
		<div class="row justify-content-center request-block">
			 <% @requests.each do |send_request| %>
		          
			  <% @profile = Profile.find_by(user_id:send_request.receiver_id ) %>
			  <% if current_user.id == send_request.sender_id  %>
				<div class="col-lg-3 ">
					<div class="card border-secondary mb-3 send-request" style="max-width: 18rem;">

					  <div class="card-header">
					  	 <% if @profile.user.gender == true %>
					  		<%= link_to 'M', dashboard_path(@profile.id), class:'link-style' %>
		       
		                  <% else %>
					  		<%= link_to 'F', dashboard_path(@profile.id), class:'link-style' %>
		                  
		                  <% end %>
					  	<%= link_to @profile.id, dashboard_path(@profile.id), class:'link-style' %>
					  	
					  </div>
					  <div class="card-body text-secondary">
					    
					    <span class="card-text"><%= link_to @profile.summary, dashboard_path(@profile.id), class:'link-style' %></span>
					  </div>
					</div>
				</div>

		   		 <% end %>
		    <% end %>
			
		</div>
	</div>
</div>


