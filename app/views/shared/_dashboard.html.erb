	height: 200px;
	position: relative;
	overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-box-orient: vertical;

     transition: transform 250ms;
  }
  
  .send-request:hover {
    transform: translateY(-10px);
  }
